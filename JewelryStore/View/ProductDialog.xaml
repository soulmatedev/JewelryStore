<Window x:Class="JewelryStore.View.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Dialog" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Label Content="Название" />
            <TextBox Name="tbName" Margin="0 5" />

            <Label Content="Описание" />
            <TextBox Name="tbDescription" Margin="0 5" />

            <Label Content="Производитель" />
            <TextBox Name="tbManufacturer" Margin="0 5" />

            <Label Content="Цена" />
            <TextBox Name="tbCost" Margin="0 5" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="ОК" Margin="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
